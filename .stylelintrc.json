{
  "extends": "stylelint-config-recommended-scss",
  "rules": {
    "ignoreFiles": ["**/*.js", "**/*.mdx", "**/*.jsx"],
    "defaultSeverity": "warning",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "local"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes"]
      }
    ]
  }
}
